<UserControl x:Class="BeatSequencer.Synth.SynthesizerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:BeatSequencer.Synth"
             mc:Ignorable="d"
             Unloaded="SynthesizerControl_Unloaded"
             Background="#101020"
             Focusable="True"
             KeyDown="UserControl_KeyDown"
             KeyUp="UserControl_KeyUp">
    <UserControl.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="PanelBrush" Color="#17192A" />
        <SolidColorBrush x:Key="AccentBrush" Color="#5C7CFA" />
        <SolidColorBrush x:Key="AccentSoftBrush" Color="#3D4FD3" />
        <SolidColorBrush x:Key="AccentDangerBrush" Color="#FF5C7C" />
        <SolidColorBrush x:Key="TextBrush" Color="#F5F5FF" />
        <SolidColorBrush x:Key="SubtleTextBrush" Color="#A0A4C0" />
        <SolidColorBrush x:Key="KeyWhiteBrush" Color="#F5F5FF" />
        <SolidColorBrush x:Key="KeyBlackBrush" Color="#202233" />
        <SolidColorBrush x:Key="KeyBorderBrush" Color="#303858" />

        <!-- Piano key styles -->
        <Style x:Key="PianoWhiteKeyStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource KeyWhiteBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource KeyBorderBrush}" />
            <Setter Property="Foreground" Value="#101020" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="1" />
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="140" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Bottom"
                                              Margin="0,0,0,6" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D0D0FF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PianoBlackKeyStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource KeyBlackBrush}" />
            <Setter Property="BorderBrush" Value="#6068A0" />
            <Setter Property="Foreground" Value="#F5F5FF" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="1" />
            <Setter Property="Width" Value="28" />
            <Setter Property="Height" Value="90" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Bottom"
                                              Margin="0,0,0,4" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3D4FD3" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Flat slider style -->
        <Style TargetType="Slider" x:Key="FlatSlider">
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}" />
            <Setter Property="Minimum" Value="0" />
            <Setter Property="Maximum" Value="1" />
            <Setter Property="Margin" Value="4,0" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Basic Synthesizer"
                       FontSize="20"
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,16,0" />
            <TextBlock Text="{Binding StatusText}"
                       FontSize="14"
                       Foreground="{StaticResource SubtleTextBrush}"
                       VerticalAlignment="Center" />
        </StackPanel>

        <!-- Controls -->
        <Border Grid.Row="1"
                Background="{StaticResource PanelBrush}"
                CornerRadius="10"
                Padding="10"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- Oscillator + volume -->
                <StackPanel Grid.Column="0" Margin="4">
                    <TextBlock Text="Oscillator" Foreground="{StaticResource SubtleTextBrush}" />
                    <ComboBox ItemsSource="{Binding OscillatorTypes}"
                              SelectedItem="{Binding SelectedOscillator}"
                              Background="#161827"
                              Foreground="{StaticResource TextBrush}"
                              BorderBrush="{StaticResource AccentSoftBrush}"
                              Margin="0,2,0,10"/>

                    <TextBlock Text="Master Volume" Foreground="{StaticResource SubtleTextBrush}" />
                    <Slider Style="{StaticResource FlatSlider}"
                            Minimum="0" Maximum="1"
                            Value="{Binding MasterVolume, Mode=TwoWay}"/>
                </StackPanel>

                <!-- ADSR -->
                <StackPanel Grid.Column="1" Margin="4">
                    <TextBlock Text="Envelope (ADSR)" Foreground="{StaticResource SubtleTextBrush}" Margin="0,0,0,4"/>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Attack" Width="60" Foreground="{StaticResource TextBrush}" />
                        <Slider Style="{StaticResource FlatSlider}"
                                Minimum="0" Maximum="2"
                                Value="{Binding AttackSeconds, Mode=TwoWay}"/>
                        <TextBlock Text="{Binding AttackSeconds, StringFormat=0.00s}"
                                   Foreground="{StaticResource SubtleTextBrush}"
                                   Margin="4,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Decay" Width="60" Foreground="{StaticResource TextBrush}" />
                        <Slider Style="{StaticResource FlatSlider}"
                                Minimum="0" Maximum="2"
                                Value="{Binding DecaySeconds, Mode=TwoWay}"/>
                        <TextBlock Text="{Binding DecaySeconds, StringFormat=0.00s}"
                                   Foreground="{StaticResource SubtleTextBrush}"
                                   Margin="4,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Sustain" Width="60" Foreground="{StaticResource TextBrush}" />
                        <Slider Style="{StaticResource FlatSlider}"
                                Minimum="0" Maximum="1"
                                Value="{Binding SustainLevel, Mode=TwoWay}"/>
                        <TextBlock Text="{Binding SustainLevel, StringFormat=0.00}"
                                   Foreground="{StaticResource SubtleTextBrush}"
                                   Margin="4,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Release" Width="60" Foreground="{StaticResource TextBrush}" />
                        <Slider Style="{StaticResource FlatSlider}"
                                Minimum="0" Maximum="2"
                                Value="{Binding ReleaseSeconds, Mode=TwoWay}"/>
                        <TextBlock Text="{Binding ReleaseSeconds, StringFormat=0.00s}"
                                   Foreground="{StaticResource SubtleTextBrush}"
                                   Margin="4,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Recording controls -->
                <StackPanel Grid.Column="2" Margin="4" HorizontalAlignment="Right">
                    <TextBlock Text="Recording" Foreground="{StaticResource SubtleTextBrush}" Margin="0,0,0,4"/>
                    <StackPanel Orientation="Horizontal">
                        <ToggleButton x:Name="RecordToggle"
                                      Width="80"
                                      Margin="0,0,4,0"
                                      IsChecked="{Binding IsRecording, Mode=TwoWay}"
                                      Click="RecordToggle_Click">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Ellipse Width="10" Height="10"
                                         Fill="{StaticResource AccentDangerBrush}"
                                         Margin="0,0,4,0"/>
                                <TextBlock Text="Record" Foreground="{StaticResource TextBrush}" />
                            </StackPanel>
                        </ToggleButton>

                        <Button x:Name="StopButton"
                                Width="60"
                                Click="StopButton_Click"
                                Background="#222638"
                                BorderBrush="{StaticResource AccentSoftBrush}">
                            <TextBlock Text="Stop" Foreground="{StaticResource TextBrush}" />
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Piano keyboard -->
        <Grid Grid.Row="2">
            <Grid.Background>
                <SolidColorBrush Color="#151626"/>
            </Grid.Background>

            <!-- White keys -->
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Bottom"
                        Margin="10,10,10,20">
                <!-- C4–B5 white keys only -->
                <Button Style="{StaticResource PianoWhiteKeyStyle}"
                        Tag="C4"
                        PreviewMouseLeftButtonDown="PianoKey_MouseDown"
                        PreviewMouseLeftButtonUp="PianoKey_MouseUp"
                        Content="C4"/>
                <Button Style="{StaticResource PianoWhiteKeyStyle}" Tag="D4"
                        PreviewMouseLeftButtonDown="PianoKey_MouseDown"
                        PreviewMouseLeftButtonUp="PianoKey_MouseUp"
                        Content="D4"/>
                <Button Style="{StaticResource PianoWhiteKeyStyle}" Tag="E4"
                        PreviewMouseLeftButtonDown="PianoKey_MouseDown"
                        PreviewMouseLeftButtonUp="PianoKey_MouseUp"
                        Content="E4"/>
                <Button Style="{StaticResource PianoWhiteKeyStyle}" Tag="F4"
                        PreviewMouseLeftButtonDown="PianoKey_MouseDown"
                        PreviewMouseLeftButtonUp="PianoKey_MouseUp"
                        Content="F4"/>
                <Button Style="{StaticResource PianoWhiteKeyStyle}" Tag="G4"
                        PreviewMouseLeftButtonDown="PianoKey_MouseDown"
                        PreviewMouseLeftButtonUp="PianoKey_MouseUp"
                        Content="G4"/>
                <Button Style="{StaticResource PianoWhiteKeyStyle}" Tag="A4"
                        PreviewMouseLeftButtonDown="PianoKey_MouseDown"
                        PreviewMouseLeftButtonUp="PianoKey_MouseUp"
                        Content="A4"/>
                <Button Style="{StaticResource PianoWhiteKeyStyle}" Tag="B4"
                        PreviewMouseLeftButtonDown="PianoKey_MouseDown"
                        PreviewMouseLeftButtonUp="PianoKey_MouseUp"
                        Content="B4"/>

                <Button Style="{StaticResource PianoWhiteKeyStyle}" Tag="C5"
                        PreviewMouseLeftButtonDown="PianoKey_MouseDown"
                        PreviewMouseLeftButtonUp="PianoKey_MouseUp"
                        Content="C5"/>
                <Button Style="{StaticResource PianoWhiteKeyStyle}" Tag="D5"
                        PreviewMouseLeftButtonDown="PianoKey_MouseDown"
                        PreviewMouseLeftButtonUp="PianoKey_MouseUp"
                        Content="D5"/>
                <Button Style="{StaticResource PianoWhiteKeyStyle}" Tag="E5"
                        PreviewMouseLeftButtonDown="PianoKey_MouseDown"
                        PreviewMouseLeftButtonUp="PianoKey_MouseUp"
                        Content="E5"/>
                <Button Style="{StaticResource PianoWhiteKeyStyle}" Tag="F5"
                        PreviewMouseLeftButtonDown="PianoKey_MouseDown"
                        PreviewMouseLeftButtonUp="PianoKey_MouseUp"
                        Content="F5"/>
                <Button Style="{StaticResource PianoWhiteKeyStyle}" Tag="G5"
                        PreviewMouseLeftButtonDown="PianoKey_MouseDown"
                        PreviewMouseLeftButtonUp="PianoKey_MouseUp"
                        Content="G5"/>
                <Button Style="{StaticResource PianoWhiteKeyStyle}" Tag="A5"
                        PreviewMouseLeftButtonDown="PianoKey_MouseDown"
                        PreviewMouseLeftButtonUp="PianoKey_MouseUp"
                        Content="A5"/>
                <Button Style="{StaticResource PianoWhiteKeyStyle}" Tag="B5"
                        PreviewMouseLeftButtonDown="PianoKey_MouseDown"
                        PreviewMouseLeftButtonUp="PianoKey_MouseUp"
                        Content="B5"/>
            </StackPanel>
        </Grid>
    </Grid>
    
</UserControl>
