<Window x:Class="BeatSequencer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BeatSequencer"
        Title="Beat Sequencer"
        Height="550"
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#101020">

    <Window.Resources>
        <!-- Colors -->
        <!--<SolidColorBrush x:Key="BackgroundBrush" Color="#101020" />
        <SolidColorBrush x:Key="PanelBrush" Color="#17192A" />
        <SolidColorBrush x:Key="AccentBrush" Color="#5C7CFA" />
        <SolidColorBrush x:Key="AccentSoftBrush" Color="#3D4FD3" />
        <SolidColorBrush x:Key="AccentDangerBrush" Color="#FF5C7C" />
        <SolidColorBrush x:Key="TextBrush" Color="#F5F5FF" />
        <SolidColorBrush x:Key="SubtleTextBrush" Color="#A0A4C0" />
        <SolidColorBrush x:Key="StepOffBrush" Color="#25273C" />
        <SolidColorBrush x:Key="StepOnBrush" Color="#5C7CFA" />
        <SolidColorBrush x:Key="StepCurrentBorderBrush" Color="#FFD86B" />-->


        <SolidColorBrush x:Key="BackgroundBrush" Color="#070816" />
        <SolidColorBrush x:Key="PanelBrush" Color="#101326" />
        <SolidColorBrush x:Key="AccentBrush" Color="#5C7CFA" />
        <SolidColorBrush x:Key="AccentSoftBrush" Color="#3A47C6" />
        <SolidColorBrush x:Key="AccentDangerBrush" Color="#FF5C7C" />
        <SolidColorBrush x:Key="AccentSuccessBrush" Color="#43D17A" />
        <SolidColorBrush x:Key="TextBrush" Color="#F7F7FF" />
        <SolidColorBrush x:Key="SubtleTextBrush" Color="#8C90B0" />
        <SolidColorBrush x:Key="StepOffBrush" Color="#1D2035" />
        <SolidColorBrush x:Key="StepOnBrush" Color="#5C7CFA" />
        <SolidColorBrush x:Key="StepOnAltBrush" Color="#FFB74D" />
        <SolidColorBrush x:Key="StepCurrentBorderBrush" Color="#FFD86B" />

        <!-- Global Button style -->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="Background" Value="{StaticResource AccentSoftBrush}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Margin" Value="5,0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="{StaticResource AccentBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SquareBankButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="0"     
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentSoftBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Step ToggleButton style -->
        <Style x:Key="StepToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="Background" Value="{StaticResource StepOffBrush}" />
            <Setter Property="BorderBrush" Value="#33374F" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="ToolTip" Value="Scroll to change velocity" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <Grid>
                                <Ellipse Width="8" Height="8" Fill="White" Opacity="0.8" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="{StaticResource StepOnBrush}" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="{StaticResource AccentBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                    <Setter Property="BorderBrush"
                            Value="{StaticResource StepCurrentBorderBrush}" />
                    <Setter Property="BorderThickness" Value="2" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Waveform border style with pulse animation on hit -->
        <Style x:Key="WaveformBorderStyle" TargetType="Border">
            <Setter Property="Height" Value="30" />
            <Setter Property="Width" Value="180" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="2" />
            <Setter Property="Background" Value="#202234" />
            <Setter Property="BorderBrush" Value="#303553" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>


        <Style x:Key="WaveformDotStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="6" />
            <Setter Property="Height" Value="6" />
            <Setter Property="Fill" Value="#43D17A" />
            <Setter Property="Stroke" Value="Black" />
            <Setter Property="StrokeThickness" Value="0.5" />
            <Setter Property="Opacity" Value="0" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsRecentlyTriggered}" Value="True">
                    <Setter Property="Opacity" Value="1" />
                </DataTrigger>
            </Style.Triggers>
        </Style>




    </Window.Resources>

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top control bar -->
        <Border Grid.Row="0"
                Background="{StaticResource PanelBrush}"
                CornerRadius="10"
                Margin="10"
                Padding="10">
            <DockPanel LastChildFill="False">
                <StackPanel DockPanel.Dock="Left"
                            Orientation="Vertical"
                            Margin="0,0,20,0">
                    <TextBlock Text="Sound SEQ"
                               Foreground="{StaticResource TextBrush}"
                               FontSize="20"
                               FontWeight="Bold" />
                    <TextBlock Text="multi-step drum machine"
                               Foreground="{StaticResource SubtleTextBrush}"
                               FontSize="12" />
                </StackPanel>

                <StackPanel Orientation="Horizontal"
            Margin="15,0,0,0"
            VerticalAlignment="Center">
                    <TextBlock Text="Steps"
               Foreground="{StaticResource SubtleTextBrush}"
               Margin="0,0,5,0" />
                    <ComboBox Width="70"
              ItemsSource="{Binding StepCountOptions}"
              SelectedItem="{Binding StepCount, Mode=TwoWay}" />
                </StackPanel>


                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">

                    <!-- Play / Stop -->
                    <Button Style="{StaticResource SquareBankButtonStyle}" Height="24" Content="Play" Width="70" Command="{Binding PlayCommand}" />
                    <Button Style="{StaticResource SquareBankButtonStyle}" Height="24" Content="Stop" Width="70" Background="{StaticResource AccentDangerBrush}" Command="{Binding StopCommand}" />

                    <!-- BPM -->
                    <StackPanel Orientation="Horizontal"
                                Margin="15,0,0,0"
                                VerticalAlignment="Center">
                        <TextBlock Text="BPM"
                                   Foreground="{StaticResource SubtleTextBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0" />
                        <Slider Width="120"
                                Minimum="60"
                                Maximum="200"
                                Value="{Binding Bpm, Mode=TwoWay}" />
                        <TextBlock Text="{Binding Bpm}"
                                   Foreground="{StaticResource TextBrush}"
                                   Margin="5,0,0,0" />
                    </StackPanel>

                    <!-- Volume -->
                    <StackPanel Orientation="Horizontal"
                                Margin="15,0,0,0"
                                VerticalAlignment="Center">
                        <TextBlock Text="Volume"
                                   Foreground="{StaticResource SubtleTextBrush}"
                                   Margin="0,0,5,0" />
                        <Slider Width="100"
                                Minimum="0"
                                Maximum="1"
                                Value="{Binding Volume, Mode=TwoWay}" />
                    </StackPanel>

                    <!-- Swing -->
                    <StackPanel Orientation="Horizontal"
                                Margin="15,0,0,0"
                                VerticalAlignment="Center">
                        <TextBlock Text="Swing"
                                   Foreground="{StaticResource SubtleTextBrush}"
                                   Margin="0,0,5,0" />
                        <Slider Width="100"
                                Minimum="0"
                                Maximum="100"
                                Value="{Binding Swing, Mode=TwoWay}" />
                    </StackPanel>

                   

                    <!-- Pattern tools -->
                    <StackPanel Orientation="Horizontal"
                                Margin="20,0,0,0"
                                VerticalAlignment="Center">
                        <Button Style="{StaticResource SquareBankButtonStyle}" Content="Randomize" Command="{Binding RandomizeCommand}" />
                        <Button Style="{StaticResource SquareBankButtonStyle}" Content="Humanize" Command="{Binding HumanizeCommand}" />
                        <Button Style="{StaticResource SquareBankButtonStyle}" Content="Clear" Command="{Binding ClearCommand}" />
                    </StackPanel>

                    <!-- Pattern banks -->
                    <!-- Compact pattern banks -->
                    <StackPanel Orientation="Vertical"
            Margin="15,0,0,0"
            VerticalAlignment="Center">
                        <!--<TextBlock Text="Banks"
               Foreground="{StaticResource SubtleTextBrush}"
               HorizontalAlignment="Left"
               Margin="0,0,0,3" />-->

                        <UniformGrid Rows="1" Columns="4">
                            <!-- Bank A -->
                            <StackPanel Orientation="Vertical" Margin="2,0">
                                <!-- Main bank button (store) -->
                                <Button Style="{StaticResource SquareBankButtonStyle}"
                                        Content="A"
                                        Width="50"
                                        Height="24"
                                        Padding="0"
                                        Margin="0"
                                        Click="BankStoreA_Click"
                                        Background="{Binding BankA_Filled, Converter={StaticResource BoolToBankBrushConverter}}" />
                                <!-- Tiny Recall / Clear row -->
                                <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,0">
                                    <Button Style="{StaticResource SquareBankButtonStyle}"
                                            Content="R"
                                            Width="25"
                                            Height="18"
                                            FontSize="10"
                                            Padding="0"
                                            Margin="0"
                                            Click="BankRecallA_Click" />
                                    <Button Style="{StaticResource SquareBankButtonStyle}"
                                            Content="X"
                                            Width="25"
                                            Height="18"
                                            FontSize="10"
                                            Padding="0"
                                            Margin="0"
                                            Click="BankClearA_Click" />
                                </StackPanel>
                            </StackPanel>

                            <!-- Bank B -->
                            <StackPanel Orientation="Vertical" Margin="0,0">
                                <Button Style="{StaticResource SquareBankButtonStyle}"
                                        Content="B"
                                        Width="50"
                                        Height="24"
                                        Padding="0"
                                        Margin="0"
                                        Click="BankStoreB_Click"
                                        Background="{Binding BankB_Filled, Converter={StaticResource BoolToBankBrushConverter}}" />
                                <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,0">
                                    <Button Style="{StaticResource SquareBankButtonStyle}" 
                                            Content="R"
                                            Width="25"
                                            Height="18"
                                            FontSize="10"
                                            Padding="0"
                                            Margin="0"
                                            Click="BankRecallB_Click" />
                                    <Button Style="{StaticResource SquareBankButtonStyle}" 
                                            Content="X"
                                            Width="25"
                                            Height="18"
                                            FontSize="10"
                                            Padding="0"
                                            Margin="0"
                                            Click="BankClearB_Click" />
                                </StackPanel>
                            </StackPanel>

                            <!-- Bank C -->
                            <StackPanel Orientation="Vertical" Margin="0,0">
                                <Button Style="{StaticResource SquareBankButtonStyle}"
                                        Content="C"
                                        Width="50"
                                        Height="24"
                                        Padding="0"
                                        Margin="0"
                                        Click="BankStoreC_Click"
                                        Background="{Binding BankC_Filled, Converter={StaticResource BoolToBankBrushConverter}}" />
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                             Margin="0,0,0,0">
                                    <Button Style="{StaticResource SquareBankButtonStyle}"
                                            Content="R"
                                            Width="25"
                                            Height="18"
                                            FontSize="10"
                                            Padding="0"
                                            Margin="0"
                                            Click="BankRecallC_Click" />
                                    <Button Style="{StaticResource SquareBankButtonStyle}"
                                            Content="X"
                                            Width="25"
                                            Height="18"
                                            FontSize="10"
                                            Padding="0"
                                            Margin="0"
                                            Click="BankClearC_Click" />
                                </StackPanel>
                            </StackPanel>

                            <!-- Bank D -->
                            <StackPanel Orientation="Vertical" Margin="0,0">
                                <Button Style="{StaticResource SquareBankButtonStyle}"
                                        Content="D"
                                        Width="50"
                                        Height="24"
                                        Padding="0"
                                        Margin="0"
                                        Click="BankStoreD_Click"
                                        Background="{Binding BankD_Filled, Converter={StaticResource BoolToBankBrushConverter}}" />
                                <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,0">
                                    <Button Style="{StaticResource SquareBankButtonStyle}"
                                            Content="R"
                                            Width="25"
                                            Height="18"
                                            FontSize="10"
                                            Padding="0"
                                            Margin="0"
                                            Click="BankRecallD_Click" />
                                    <Button Style="{StaticResource SquareBankButtonStyle}"
                                            Content="X"
                                            Width="25"
                                            Height="18"
                                            FontSize="10"
                                            Padding="0"
                                            Margin="0"
                                            Click="BankClearD_Click" />
                                </StackPanel>
                            </StackPanel>
                        </UniformGrid>
                    </StackPanel>

                

                    <!-- Save/Load/Export pattern -->
                    <StackPanel Orientation="Horizontal"                                
                                Margin="10,0,0,0">
                        <Button Height="24" 
                                Style="{StaticResource SquareBankButtonStyle}" 
                                Content="Save" 
                                Command="{Binding SavePatternToFileCommand}" />
                        <Button Height="24" 
                                Style="{StaticResource SquareBankButtonStyle}" 
                                Content="Load" 
                                Command="{Binding LoadPatternFromFileCommand}" />
                        <Button Height="24" 
                                Style="{StaticResource SquareBankButtonStyle}" 
                                Content="Export WAV"  
                                Click="ExportWav_Click" />
                    </StackPanel>

                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Tracks area -->
        <Border Grid.Row="1"
                Margin="10"
                Background="{StaticResource PanelBrush}"
                CornerRadius="10"
                Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Tracks}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="220" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!-- Left: Track info -->
                                <StackPanel Grid.Column="0"
                                            Orientation="Vertical"
                                            Margin="0,0,10,0">
                                    <TextBlock Text="{Binding Name}"
                                               Foreground="{StaticResource TextBrush}"
                                               FontWeight="SemiBold" />
                                    <ComboBox ItemsSource="{Binding AvailableSamples}"
                                              SelectedItem="{Binding SelectedSampleName, Mode=TwoWay}"
                                              Width="180"
                                              Margin="0,3,0,3" />

                                    <!-- Waveform preview -->
                                    <Border Style="{StaticResource WaveformBorderStyle}">
                                        <Canvas>
                                            <!-- waveform line -->
                                            <Polyline Points="{Binding WaveformPoints}"
                                                Stroke="#4C537A"
                                                StrokeThickness="1" />

                                            <!-- playhead dot -->
                                            <Ellipse Style="{StaticResource WaveformDotStyle}">
                                                <Ellipse.RenderTransform>
                                                    <TranslateTransform
                                                     X="{Binding PlayheadPoint.X}"
                                                     Y="{Binding PlayheadPoint.Y}" />
                                                </Ellipse.RenderTransform>
                                            </Ellipse>
                                        </Canvas>
                                    </Border>



                                    <!-- Volume / Pan -->
                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,4,0,0">
                                        <TextBlock Text="Vol"
                                                   Foreground="{StaticResource SubtleTextBrush}"
                                                   Margin="0,0,3,0" />
                                        <Slider Width="80"
                                                Minimum="0"
                                                Maximum="1"
                                                Value="{Binding Volume, Mode=TwoWay}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,2,0,0">
                                        <TextBlock Text="Pan"
                                                   Foreground="{StaticResource SubtleTextBrush}"
                                                   Margin="0,0,3,0" />
                                        <Slider Width="80"
                                                Minimum="-1"
                                                Maximum="1"
                                                Value="{Binding Pan, Mode=TwoWay}" />
                                    </StackPanel>
                                </StackPanel>

                                <!-- Right: Step pads -->
                                <ItemsControl Grid.Column="1" ItemsSource="{Binding Steps}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Rows="1" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <ToggleButton Style="{StaticResource StepToggleStyle}"
              IsChecked="{Binding IsActive, Mode=TwoWay}"
              PreviewMouseLeftButtonDown="StepButton_PreviewMouseLeftButtonDown"
              PreviewMouseMove="StepButton_PreviewMouseMove"
              PreviewMouseLeftButtonUp="StepButton_PreviewMouseLeftButtonUp" />


                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
